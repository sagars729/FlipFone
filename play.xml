<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="flipfone"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:background="@color/green">

    <Button
        android:text="@string/mode_arcade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonArcade"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/darkBlue"/>

    <Button
        android:text="@string/mode_classic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClassic"
        style="@style/Widget.AppCompat.Button"
        android:layout_above="@+id/buttonArcade"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/darkRed"
        tools:ignore="HardcodedText" />

    <Button
        android:text="@string/mode_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/grey"
        android:id="@+id/buttonSettings" />

    <TextView
        android:text="flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TitleFirst"
        android:textSize="60sp"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginStart="56dp"
        android:layout_above="@+id/TitleSecond"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="fone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:id="@+id/TitleSecond"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="60sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
