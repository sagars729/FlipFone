<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:layout_alignBaseline="@+id/playAgain"
        android:layout_alignBottom="@+id/playAgain"
        android:layout_toEndOf="@+id/scoreText" />

    <Button
        android:text="Play Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAgain"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/scoreText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscoreText"
        android:text="High Score"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/lastFlipText"
        android:layout_alignBottom="@+id/lastFlipText"
        android:layout_toStartOf="@+id/scoreText"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastFlipNum"
        android:textColor="@color/white"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/home"
        android:layout_alignEnd="@+id/lastFlipText" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreText"
        android:textSize = "25sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreNum"
        android:textSize = "25sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/scoreText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Last Flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastFlipText"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/highscoreNum"
        android:layout_alignEnd="@+id/home"
        android:layout_marginEnd="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscoreNum"
        android:text="jk"
        android:textColor="@color/white"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/lastFlipNum"
        android:layout_alignBottom="@+id/lastFlipNum"
        android:layout_alignEnd="@+id/highscoreText" />

</RelativeLayout>
