<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <TextView
        android:text="TIPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:text="1. Flip your phone onto a soft landing area such as a bed or coach if available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:id="@+id/one"
        android:textSize="15sp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:text="2. Use both hands to flip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_alignStart="@+id/one"
        android:textSize="15sp"
        android:id="@+id/two"
        android:layout_marginTop="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:text="3. Be aware of your surroundings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:layout_below="@+id/two"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/two"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/arrowleft"
        android:layout_marginBottom="35dp"
        android:id="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/three" />

    <TextView
        android:text="BACK"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/back" />


</RelativeLayout>
